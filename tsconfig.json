{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "test",
  ]
}
